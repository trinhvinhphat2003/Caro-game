<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.home.HomeFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <!-- Header Layout -->

    <!-- Center Button -->


    <ImageView
        android:id="@+id/backGround"
        android:layout_width="match_parent"
        android:layout_height="923dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_bg" />

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/top_section_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <!-- Avatar Image -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/anonymous"
            android:contentDescription="gello"
            android:scaleType="centerCrop"
            android:src="@drawable/anonymous" />

        <!-- Player Info Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Player Name -->
            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Coin Display Box -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coin_box_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Coin Display -->
            <TextView
                android:id="@+id/coinDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Coins: 1000000"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Recharge Icon -->
            <ImageView
                android:id="@+id/rechargeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Charge"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/findRoomButton"
        android:layout_marginBottom="60dp"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/room_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/pvpIcon"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/vs" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Play PvP"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/playWithBotButton"
        android:layout_marginTop="50dp"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/room_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/pveIcon"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/bot" />

        <TextView
            android:id="@+id/botText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Play PvE"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>