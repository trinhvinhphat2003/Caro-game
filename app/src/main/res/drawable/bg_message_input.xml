<!-- bg_message_input.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Border Color -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
    <!-- Background Color -->
    <solid android:color="#FFFFFF" />
    <!-- Rounded Corners -->
    <corners android:radius="20dp" />
    <!-- Padding -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
</shape>
